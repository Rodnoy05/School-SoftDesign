<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/newColorPrimary</item>
        <item name="colorPrimaryDark">@color/newColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<!--        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="font.medium" parent="font">
        <item name="android:fontFamily">@string/font_medium</item>
        <item name="android:textSize">@dimen/fontsize_big</item>
    </style>

    <style name="font.regular" parent="font">
        <item name="android:fontFamily">@string/font_regular</item>
        <item name="android:textSize">@dimen/fontsize_normal</item>
    </style>


    <style name="item_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/heightitem_menu</item>
        <item name="android:paddingTop">@dimen/margin_24</item>
        <item name="android:paddingBottom">@dimen/margin_16</item>
    </style>

    <style name="icon_menu">
        <item name="android:layout_width">@dimen/iconsize_menu</item>
        <item name="android:layout_height">@dimen/iconsize_menu</item>
    </style>


</resources>